#!/usr/bin/env ruby
#START:load_path
# This line can be removed
$LOAD_PATH << File.expand_path(File.dirname(__FILE__) + '/../lib')

require 'rubygems'
require 'gli'

#END:load_path
require 'to-do'

include GLI::App

version ToDo::VERSION
config_file File.join(ENV['HOME'],'.to-do.rc.yaml')

default_value File.join(ENV['HOME'],'.to-do.txt')
flag [:f,:filename]
command :new do |c|
  c.flag :f
  c.switch :s
  c.action do |global_opts, opts, args|
    puts "new"
  end
end 
command :list do |c|

  c.action do |global_opts, opts, args|
    puts "list"
  end
end 
command :done do |c|
  c.action do |global_opts, opts, args|
    puts "action"
  end
end 
run(ARGV)